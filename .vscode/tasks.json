{
  // See http://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "0.1.0",
  "command": "gulp",
  "isShellCommand": true,
  "showOutput": "always",
  "suppressTaskName": true,
  "tasks": [
    {
      "taskName": "watch",
      "isWatching": true
    },
    {
      "taskName": "build",
      "isBuildCommand": true,
      "args": ["buildClient"]
    },
    {
      "taskName": "server",
      "isWatching": true,
      "args": ["runServer"]
    }
  ]
}